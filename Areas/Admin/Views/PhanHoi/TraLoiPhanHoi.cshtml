@model HeThongThueXe.Models.gmail

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div>
        @using (Html.BeginForm("TraLoiPhanHoi", "PhanHoi", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <center>
                <h1>PHẢN HỒI KHÁCH HÀNG</h1>

                <hr />
                <table>
                    <tr>
                        <td style="width:80px">
                            To:
                        </td>
                        <td>@Html.TextBoxFor(model => model.To, new { @Value = ViewBag.phanHoi.Email })</td>
                    </tr>
                    <tr>
                        <td>
                            Chủ đề:
                        </td>
                        <td>@Html.TextBoxFor(model => model.Subject)</td>
                    </tr>
                    <tr>
                        <td valign="top">
                            Nội dung:
                        </td>
                        <td>@Html.TextAreaFor(model => model.Body, new { rows = "15", cols = "25" })</td>
                    </tr>
                    <tr>
                        <td>
                            <input type="submit" value="Send" class="btn btn-secondary"/>
                        </td>
                    </tr>
                </table>
                <br />
                <span style="color:green">@ViewBag.Message</span>
            </center>
        }
    </div>
</body>
</html>


