
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="~/Content/yeucauthue.css" />
    <title>Quản lý loại xe</title>
</head>
<body>
    <div class="b-content">
        <p class="title">
            <span>
                QUẢN LÝ LOẠI XE
            </span>
            @Html.ActionLink("Thêm loại xe", "ThemLoaiXe", "QuanLyLoaiXe", null, new { @class = "btn btn-secondary" })
        </p>
        <div class="bang">
            <table class="table">
                <thead>
                    <tr>
                        <th>Mã loại xe</th>
                        <th>Loại xe</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var loaiXe in ViewBag.dsLoaiXe)
                    {
                        <tr>
                            <td scope="row">@loaiXe.IDLoaiXe</td>
                            <td>@loaiXe.TenLoaiXe</td>
                            <td class="cot-btn">
                                <button class="btn btn-secondary">
                                    @Html.ActionLink("Xem chi tiết", "ChiTietLoaiXe", "QuanLyLoaiXe", new { idLoaiXe = loaiXe.IDLoaiXe }, null)
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>


    </div>
</body>
</html>


