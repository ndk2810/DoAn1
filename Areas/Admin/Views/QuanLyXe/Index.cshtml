
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}



<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="~/Content/yeucauthue.css" />
    <title>Quản lý xe</title>
</head>
<body>
    <div class="b-content">
        <p class="title">
            <span>
                QUẢN LÝ XE
            </span>
            @Html.ActionLink("Thêm xe", "ThemXe", "QuanLyXe", null, new { @class = "btn btn-secondary" })
        </p>
        <div class="bang">
            <table class="table">
                <thead>
                    <tr>
                        <th>Mã xe</th>
                        <th>Tên xe</th>
                        <th>Biển số xe</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var xe in ViewBag.dsXe)
                    {
                        <tr>
                            <td scope="row">@xe.IDXe</td>
                            <td>@xe.TenXe</td>
                            <td>@xe.BienSoXe</td>
                            <td class="cot-btn">
                                <button class="btn btn-secondary">
                                    @Html.ActionLink("Xem chi tiết", "ChiTietXe", "QuanLyXe", new { idXe = xe.IDXe }, null)
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>


    </div>
</body>
</html>




