@model HeThongThueXe.Models.XE

@{
    ViewBag.Title = "ThemXe";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";

    List<SelectListItem> listLoaiXe = new List<SelectListItem>();
    foreach (var temp in ViewBag.dsLoaiXe)
    {
        listLoaiXe.Add(new SelectListItem() { Text = temp.TenLoaiXe, Value = temp.IDLoaiXe.ToString() });
    }

    List<SelectListItem> listHieuXe = new List<SelectListItem>();
    foreach (var temp in ViewBag.dsHieuXe)
    {
        listHieuXe.Add(new SelectListItem() { Text = temp.TenHieuXe, Value = temp.IDHieuXe.ToString() });
    }
}

<h2>ThemXe</h2>

@using (Html.BeginForm("ThemXe", "QuanLyXe", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>XE</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.IDLoaiXe, "Loại Xe", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.IDLoaiXe, listLoaiXe, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.IDLoaiXe, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.IDHieuXe, "Hiệu Xe", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.IDHieuXe, listHieuXe, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.IDHieuXe, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.TenXe, "Tên Xe", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.TenXe, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TenXe, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.BienSoXe, "Biển số Xe", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.BienSoXe, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.BienSoXe, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Thêm xe" class="btn btn-secondary" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
