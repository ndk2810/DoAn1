                                        <h4>Cho thuê xe @hieuXe.TenHieuXe tại TPHCM</h4>
                                        <p>@hieuXe.TomTat</p>
                                        @Html.ActionLink("Xem chi tiết", "Index", "LoaiXeChoThue", new { idHieuXe = hieuXe.IDHieuXe }, new { @class = "btn btn-primary" })
                                    </div>
