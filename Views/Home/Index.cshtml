<body>
    @*Bắt đầu phần slideshow*@
    <div id="myCarousel" class="carousel slide" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner" style="z-index:0">
            <div class="item active">
                <img src="~/Content/img/slide1.jpg">
            </div>

            <div class="item">
                <img src="~/Content/img/slide2.jpg">
            </div>

            <div class="item">
                <img src="~/Content/img/slide3.jpg">
            </div>
        </div>

        <!-- Left and right controls -->
        <a class="left carousel-control" href="#myCarousel" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
    <div class="main">
        <div class="container main__content">
            <div class="main__content--content">
                <h3 class="main__content--content---title">
                    <span>Cho thuê xe du lịch</span>
                </h3>
                <ul class="main__content--content---products">
                    <div class="row">
                        @*LOAD LOẠi XE TỪ CSDL*@
                        @foreach (var loaiXe in ViewBag.dsLoaiXe)
                        {
                            <li class="aProduct col-lg-4">
                                <div class="aProduct--item">
                                    <div class="card">
                                        <img src="data:image;base64,@System.Convert.ToBase64String(loaiXe.HinhAnh)" alt="Card image cap">
                                        <div class="card-body">
                                            <h4>Cho thuê @loaiXe.TenLoaiXe</h4>
                                            <p>@loaiXe.TomTat</p>
                                            @Html.ActionLink("Xem chi tiết", "Index", "ChiTietThueXe", new {idLoaiXe = loaiXe.IDLoaiXe} , new { @class = "btn btn-primary" })
                                        </div>
                                    </div>
                                </div>
                            </li>
                        }
                    </div>

                </ul>
                <h3 class="main__content--content---title">
                    <span>Các loại xe cho thuê</span>
                </h3>
